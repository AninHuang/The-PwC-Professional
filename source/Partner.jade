    title The PwC Professional
    style.
      .list-group-flush .list-group-item:nth-child(odd) {
      background-color: #F8F9FA;
      }
      .pwc-program {
      position: relative;
      }
      .pwc-program__text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: none;
      max-width: 300px;
      margin: auto;
      padding: 1rem;
      border-radius: 5%;
      background-color: #DEDEDE;
      opacity: .9;
      }
