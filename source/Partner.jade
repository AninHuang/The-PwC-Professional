            script.
              $(window).on('hashchange', function(e) {       
              setTimeout(function() {
              $(".list-group-item-action.active").removeClass("active");
              $('[href="' + document.location.hash + '"]').addClass("active");
              }, 50);
              });
              
              $(function () {
              $('[data-toggle="tooltip"]').tooltip();
              $('#myModal').on('shown.bs.modal', function () {
              $('#myInput').trigger('focus')
              });
              });

              window.FontAwesomeConfig = {
                searchPseudoElements: true
              }

              function showToolTip(evt) {
              var hoverText = document.getElementsByClassName('pwc-program__text')[0];
              
              hoverText.innerHTML = evt.getAttribute('data-info');
              hoverText.insertAdjacentHTML('afterbegin', '<p class="font-weight-bold pwc-color__red"><i class="fas fa-book mr-1"></i>' + evt.getAttribute('alt') + '</p>');
              hoverText.style.display = 'block';
              }

              function hideToolTip() {
              document.getElementsByClassName('pwc-program__text')[0].style.display = 'none';
              }

              //pieChart
              var pieChart = document.getElementById("pieChart");
              var ctxD = pieChart.getContext('2d');

              pieChart.height = 230;
              pieChart.style.margin = '0 auto';

              var pieChart = new Chart(ctxD, {
              type: 'pie',
              data: {
              labels: ["實務挑戰", "經驗傳承", "教育訓練"],
              datasets: [{
              data: [70, 20, 10],
              backgroundColor: ["#E0301E", "#DB536A", "#FFB600"],
              hoverBackgroundColor: ["#E86153", "#E27588", "#FFC83D"]
              }]
              },
              options: {
              responsive: false,
              maintainAspectRatio: false,
              legend:{
              labels:{
              fontSize: 15
              },
              onClick: (function (e) {
              return e.stopPropagation();
              })
              },
              tooltips: {
              enabled: true
              },
              plugins: {
              labels: {
              fontColor: '#fff',
              fontSize: 14
              }
              }
              }
              });
